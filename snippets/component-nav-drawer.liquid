{% doc %}
  Renders the header menu drawer for mobile navigation with toggle button,
  slide-in panel, nested navigation, and optional localization and account link.

  @param {linklist} menu - Menu object used by nested nav dropdown
  @param {string} menu_color_scheme - Color scheme handle for menu background
  @param {boolean} enable_country_selector - Whether to show country selector
  @param {boolean} enable_language_selector - Whether to show language selector
  @param {boolean} enable_customer_avatar - Whether to show account icon link

  @example
  {% render 'component-nav-drawer',
    menu: section.settings.menu,
    menu_color_scheme: section.settings.menu_color_scheme,
    enable_country_selector: section.settings.enable_country_selector,
    enable_language_selector: section.settings.enable_language_selector,
    enable_customer_avatar: section.settings.enable_customer_avatar
  %}
{% enddoc %}
{% stylesheet %}
  #menu-drawer {
    position: absolute;
    top: 86px;
    left: 0;
    width: min(1110px, 100%);
    height: calc(100vh - 126px);
    overflow-y: auto;
    transform: translateX(-100%);
    z-index: 100;
    transition: 300ms ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  #header-drawer #menu-drawer.drawer-open {
    transform: translateX(0);
  }
  #main-header .header-drawer_icons svg {
    width: 20px;
  }
  #header-drawer .header-drawer_icons.drawer-open svg.icon-menu,
  #header-drawer .header-drawer_icons:not(.drawer-open) svg.icon-close {
    display: none;
  }
  #menu-drawer ul {
    list-style: none;
    margin: 0;
  }
  #menu-drawer li {
    width: 100%;
  }
  #menu-drawer a:hover {
    color: rgb(var(--color-foreground));
  }
  .menu-drawer_action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    border-top: 1px solid rgb(var(--color-foreground), 0.2);
    padding: 15px 20px;
  }
  .menu-drawer_action a {
    border: 0 !important;
    justify-content: flex-end;
  }
  .menu-drawer_localization {
    display: flex;
  }
  .menu-drawer_localization .localization-wrapper {
    position: relative;
    padding: 12px 6px;
    border: 1px solid rgb(var(--color-foreground), 0.2);
    margin-right: 10px;
  }
  .menu-drawer_localization .localization-list {
    top: unset;
    left: -1px;
    bottom: 100%;
    width: 100%;
    box-shadow: none;
    border: 1px solid rgb(var(--color-foreground), 0.2);
  }
  .menu-drawer_account svg {
    max-width: 40px;
    min-width: 40px;
    height: 40px;
  }

  .header-drawer_icons_wrapper {
    display: flex;
    align-items: center;
    gap: 3.2rem;
  }

  @media (max-width: 1110px) {
    .header-drawer_icons svg path {
      fill: var(--header-text-color);
    }

    #menu-drawer .header-drawer_icons > .header__search-button > svg path {
      stroke: var(--header-text-color);
    }
  }

  @media (max-width: 768px) {
    #menu-drawer {
      top: 68px;
      height: calc(100vh - 108px);
    }

    .header-drawer_icons_wrapper {
      gap: 1.6rem;
    }
  }
{% endstylesheet %}

{% capture header_search %}
  <div class="header__search-button" @click="searchOpen = !searchOpen; $nextTick(() => { if (searchOpen) $refs.searchInput.focus() })" x-show="!drawerOpen">
    {{ 'icon-search.svg' | inline_asset_content }}
  </div>
{% endcapture %}

<div
  id="header-drawer"
  x-data="{ drawerOpen: false }"
  @click.outside="drawerOpen = false"
>
  <div class="header-drawer_icons_wrapper">
    <button
      class="header-drawer_icons"
      @click="drawerOpen = !drawerOpen"
      :class="{ 'drawer-open': drawerOpen }"
    >
      {{- 'icon-menu.svg' | inline_asset_content | replace: '<svg', '<svg class="icon icon-menu"' -}}
      {{- 'icon-close.svg' | inline_asset_content -}}
      {% comment %} Search button {% endcomment %}
    </button>
    {{ header_search }}
  </div>
  <div
    id="menu-drawer"
    class="color-{{ menu_color_scheme }} gradient"
    :class="{ 'drawer-open': drawerOpen }"
  >
    {% render 'component-nav-dropdown', nav_style: 'drawer', menu: menu, menu_color_scheme: menu_color_scheme %}
  </div>
</div>
