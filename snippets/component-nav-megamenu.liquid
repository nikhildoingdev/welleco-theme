{% doc %}
  Renders a megamenu layout for a navigation item with child links. The menu
  expands on click using Alpine.js and supports nested child links.

  @param {linklist} menu - Menu object to render
  @param {string} menu_color_scheme - Color scheme handle for menu background

  @example
  {% render 'component-nav-megamenu', menu: section.settings.menu, menu_color_scheme: section.settings.menu_color_scheme %}
{% enddoc %}
{% stylesheet %}
  #main-header *:focus {
    outline: none;
  }
  #main-header .nav-megamenu {
    position: absolute;
    left: 0;
    top: 100%;
    width: 100%;
    background: #fff;
  }
  #main-header .nav-megamenu .page-width {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    justify-content: space-between;
    margin-inline: auto;
    row-gap: 4rem;
    align-items: flex-start;
    padding: 3.2rem 4rem;
  }

  #main-header .nav-megamenu .nav-megamenu_child {
    position: static;
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1.4rem;
    align-items: flex-start;
  }
  #main-header .nav-megamenu_heading,
  .featured-products__heading {
    font-weight: 500;
    letter-spacing: 0.15rem;
    text-transform: uppercase;
    font-size: 1.6rem;
  }
  #main-header .nav-megamenu_child a {
    display: block;
    font-size: 1.4rem;
    font-weight: 400;
    line-height: 100%;
    text-transform: capitalize;
  }

  .featured-products {
    grid-column: span 3;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 250px));
    justify-content: start;
    gap: 2.4rem;
  }

  .header__megamenu-custom {
    grid-column: span 6;
  }

  .header__megamenu-items {
    display: flex;
    gap: 2.4rem;
  }

  .header__megamenu-item {
    display: flex;
    flex-direction: column;
    gap: 1.6rem;
  }

  .header__megamenu-item:hover .underline-effect::after {
    transform: translateX(-50%) scaleX(1);
  }

  .header__megamenu-item-image-wrapper {
    width: 250px;
    height: 250px;
    object-fit: cover;
  }

  .header__megamenu-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .header__megamenu-item span {
    font-size: 1.6rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.15rem;
    color: var(--color-foreground);
    width: fit-content;
  }

  .megamenu__button {
    grid-column: 1 / -1;
    justify-self: center;
    align-self: start;
    margin: 2rem;
  }

  .megamenu__button span {
    width: fit-content;
    padding: 1.5rem 3rem;
    background: var(--header-bg);
    text-transform: uppercase;
    border: 1px solid var(--header-text-color);
    transition: all 0.3s ease;
    color: var(--header-text-color);
    transition: all 0.3s ease;
  }
  .megamenu__button span:hover {
    background: var(--header-text-color);
    color: var(--header-bg);
  }
{% endstylesheet %}

<ul class="header__menu-list">
  {% for link in menu.links %}
    {% assign link_title = link.title | downcase %}
    {% comment %} Find megamenu block by matching menu_handle (case insensitive) {% endcomment %}
    {% assign megamenu_block = null %}
    {% for block in section.blocks %}
      {% if block.type == 'megamenu' %}
        {% assign block_handle = block.settings.menu_handle | downcase %}
        {% if block_handle == link_title %}
          {% assign megamenu_block = block %}
          {% break %}
        {% endif %}
      {% endif %}
    {% endfor %}

    <li
      x-data="{ menuOpen: false }"
      @mouseover="menuOpen = true"
      @mouseleave="menuOpen = false"
      class="header__menu-item"
    >
      {% if link.links != blank or megamenu_block %}
        <button
          :class="{ 'menu-open': menuOpen }"
          class="menu-toggle underline-effect"
        >
          {{- link.title | escape -}}
        </button>
        <div
          x-show="menuOpen"
          x-transition
          x-cloak
          class="nav-megamenu color-{{ menu_color_scheme }} gradient"
        >
          <ul class="page-width" role="list">
            {%- for childlink in link.links -%}
              <li>
                <a
                  href="{{ childlink.url }}"
                  class="nav-megamenu_heading"
                  {% if childlink.current %}
                    aria-current="page"
                  {% endif %}
                >
                  {{ childlink.title | escape }}
                </a>
                {%- if childlink.links != blank -%}
                  <ul class="nav-megamenu_child" role="list">
                    {%- for grandchildlink in childlink.links -%}
                      <li>
                        <a
                          href="{{ grandchildlink.url }}"
                          {% if grandchildlink.current %}
                            aria-current="page"
                          {% endif %}
                        >
                          {{ grandchildlink.title | escape }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </li>
            {%- endfor -%}

            {% if link.title == 'Shop' and section.settings.show_products %}
              <div class="featured-products">
                <h2 class="featured-products__heading">{{ section.settings.products_heading }}</h2>
                <div class="product-grid">
                  {% for product in collections[section.settings.collection].products
                    limit: section.settings.products_count
                  %}
                    {% render 'component-product-card',
                      card_product: product,
                      media_aspect_ratio: 'adapt',
                      quick_add: 'standard'
                    %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}

            <a href="{{ section.settings.button_link }}" class="megamenu__button"
              ><span>{{ section.settings.button_text }}</span></a
            >

            {% comment %} Render custom megamenu content if it exists {% endcomment %}
            {% if megamenu_block %}
              <div class="header__megamenu-custom header__megamenu--{{ link.title | handleize }}">
                {% if megamenu_block.settings.heading != blank %}
                  <h3 class="header__megamenu-heading">{{ megamenu_block.settings.heading }}</h3>
                {% endif %}

                <div class="header__megamenu-items">
                  {% comment %} Find child items by matching parent_menu_handle (case insensitive) {% endcomment %}
                  {% for block in section.blocks %}
                    {% if block.type == 'megamenu_item' %}
                      {% assign block_parent_handle = block.settings.parent_menu_handle | downcase %}
                      {% if block_parent_handle == link_title %}
                        <a href="{{ block.settings.item_link }}" class="header__megamenu-item">
                          {% if block.settings.item_image %}
                            <div
                              class="header__megamenu-item-image-wrapper"
                              style="width: {{ block.settings.item_image_width }}px; height: {{ block.settings.item_image_width }}px;"
                            >
                              {{
                                block.settings.item_image
                                | image_url: width: block.settings.item_image_width
                                | image_tag
                              }}
                            </div>
                          {% endif %}
                          <span class="underline-effect">{{ block.settings.item_title }}</span>
                        </a>
                      {% endif %}
                    {% endif %}
                  {% endfor %}
                </div>
              </div>
            {% endif %}
          </ul>
        </div>
      {% else %}
        <a
          class="underline-effect"
          href="{{ link.url }}"
          {% if link.current %}
            aria-current="page"
          {% endif %}
        >
          {{- link.title | escape -}}
        </a>
      {% endif %}
    </li>
  {% endfor %}
</ul>
