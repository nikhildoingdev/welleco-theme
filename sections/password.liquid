{% liquid
  assign section_id = 'Password-' | append: section.id
%}

<section id="{{ section_id }}" class="password-page">
  <div class="password-container">
    <div class="password-content">
      <!-- Logo/Brand Area -->
      {% if section.settings.show_logo and settings.logo %}
        <div class="password-logo">
          <img
            src="{{ settings.logo | image_url: width: 200 }}"
            alt="{{ shop.name | escape }}"
            width="200"
            height="auto"
            loading="eager"
          >
        </div>
      {% else %}
        <div class="password-brand">
          <h1>{{ shop.name | escape }}</h1>
        </div>
      {% endif %}

      <!-- Main Content -->
      <div class="password-main">
        <h2 class="password-title">{{ 'password.title' | t }}</h2>

        {% if shop.password_message %}
          <div class="password-message">
            <p>{{ shop.password_message }}</p>
          </div>
        {% endif %}

        {% if section.settings.subtitle %}
          <p class="password-subtitle">{{ section.settings.subtitle }}</p>
        {% endif %}

        <!-- Password Form -->
        {% form 'storefront_password', class: 'password-form' %}
          {% if form.errors %}
            <div class="password-errors" role="alert">
              <div class="error-icon">
                {{ 'icon-error.svg' | inline_asset_content }}
              </div>
              <div class="error-message">
                {{ form.errors | default_errors }}
              </div>
            </div>
          {% endif %}

          <div class="password-input-group">
            <label for="PasswordInput-{{ section.id }}" class="password-label visually-hidden">
              {{ 'password.password' | t }}
            </label>

            <div class="password-field">
              <input
                type="password"
                name="password"
                id="PasswordInput-{{ section.id }}"
                class="password-input"
                placeholder="{{ 'password.password_placeholder' | t }}"
                autocomplete="current-password"
                required
              >
              <button type="submit" class="password-submit">
                <span class="submit-text">{{ 'password.enter' | t }}</span>
                <span class="submit-icon">
                  {{ 'icon-arrow.svg' | inline_asset_content }}
                </span>
              </button>
            </div>
          </div>
        {% endform %}

        <!-- Additional Info -->
        {% if section.settings.show_contact_info %}
          <div class="password-contact">
            <p>{{ 'password.contact_info' | t }}</p>
            {% if section.settings.contact_email %}
              <a href="mailto:{{ section.settings.contact_email }}" class="contact-link">
                {{ section.settings.contact_email }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% stylesheet %}
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgb(var(--color-background)) 0%, rgba(var(--color-foreground), 0.05) 100%);
    padding: 2rem 1rem;
    position: relative;
  }

  .password-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 25% 25%, rgba(var(--color-foreground), 0.02) 0%, transparent 50%),
      radial-gradient(circle at 75% 75%, rgba(var(--color-foreground), 0.02) 0%, transparent 50%);
    pointer-events: none;
  }

  .password-container {
    width: 100%;
    max-width: 42rem;
    position: relative;
    z-index: 1;
  }

  .password-content {
    background: rgb(var(--color-background));
    border-radius: 1.5rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border: 1px solid rgba(var(--color-foreground), 0.08);
    padding: 3rem;
    text-align: center;
    backdrop-filter: blur(10px);
  }

  @media screen and (max-width: 768px) {
    .password-content {
      padding: 2rem 1.5rem;
      border-radius: 1rem;
    }
  }

  /* Logo/Brand */
  .password-logo {
    margin-bottom: 2rem;
  }

  .password-logo img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 4px 6px rgba(0, 0, 0, 0.1));
  }

  .password-brand h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(var(--color-foreground));
    margin: 0 0 2rem 0;
    letter-spacing: -0.025em;
  }

  @media screen and (max-width: 768px) {
    .password-brand h1 {
      font-size: 2rem;
    }
  }

  /* Main Content */
  .password-title {
    font-size: 1.875rem;
    font-weight: 600;
    color: rgb(var(--color-foreground));
    margin: 0 0 1rem 0;
    letter-spacing: -0.025em;
  }

  .password-message {
    margin-bottom: 1.5rem;
  }

  .password-message p {
    color: rgba(var(--color-foreground), 0.7);
    font-size: 1.125rem;
    line-height: 1.6;
    margin: 0;
  }

  .password-subtitle {
    color: rgba(var(--color-foreground), 0.6);
    font-size: 1rem;
    margin: 0 0 2rem 0;
    line-height: 1.5;
  }

  /* Form Styling */
  .password-form {
    margin-bottom: 2rem;
  }

  .password-errors {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    background: rgba(var(--color-foreground), 0.05);
    border: 1px solid rgba(var(--color-foreground), 0.2);
    border-radius: 0.75rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
    color: rgba(var(--color-foreground), 0.8);
  }

  .error-icon {
    flex-shrink: 0;
    width: 1.25rem;
    height: 1.25rem;
  }

  .error-message {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .password-input-group {
    margin-bottom: 1rem;
  }

  .password-field {
    position: relative;
    display: flex;
    border-radius: 0.75rem;
    overflow: hidden;
    border: 2px solid rgba(var(--color-foreground), 0.1);
    background: rgb(var(--color-background));
    transition: all 0.2s ease;
  }

  .password-field:focus-within {
    border-color: rgba(var(--color-foreground), 0.3);
    box-shadow: 0 0 0 3px rgba(var(--color-foreground), 0.1);
  }

  .password-input {
    flex: 1;
    padding: 1rem 1.25rem;
    border: none;
    background: transparent;
    font-size: 1rem;
    color: rgb(var(--color-foreground));
    outline: none;
  }

  .password-input::placeholder {
    color: rgba(var(--color-foreground), 0.5);
  }

  .password-submit {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 1.5rem;
    background: rgb(var(--color-foreground));
    color: rgb(var(--color-background));
    border: none;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .password-submit:hover {
    background: rgba(var(--color-foreground), 0.9);
    transform: translateX(2px);
  }

  .password-submit:active {
    transform: translateX(1px);
  }

  .submit-icon {
    width: 1rem;
    height: 1rem;
    transition: transform 0.2s ease;
  }

  .password-submit:hover .submit-icon {
    transform: translateX(2px);
  }

  /* Contact Info */
  .password-contact {
    padding-top: 1.5rem;
    border-top: 1px solid rgba(var(--color-foreground), 0.1);
  }

  .password-contact p {
    color: rgba(var(--color-foreground), 0.6);
    font-size: 0.875rem;
    margin: 0 0 0.5rem 0;
  }

  .contact-link {
    color: rgb(var(--color-foreground));
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .contact-link:hover {
    opacity: 0.7;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .password-content {
    animation: fadeInUp 0.6s ease-out;
  }

  /* Accessibility */
  .visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
  }

  /* Focus styles for better accessibility */
  .password-input:focus,
  .password-submit:focus,
  .contact-link:focus {
    outline: 2px solid rgb(var(--color-foreground));
    outline-offset: 2px;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Password Page",
  "settings": [
    {
      "type": "header",
      "content": "Branding"
    },
    {
      "type": "checkbox",
      "id": "show_logo",
      "label": "Show logo",
      "default": true,
      "info": "Uses the logo from theme settings"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "placeholder": "We're preparing something special for you..."
    },
    {
      "type": "header",
      "content": "Contact Information"
    },
    {
      "type": "checkbox",
      "id": "show_contact_info",
      "label": "Show contact information",
      "default": false
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Contact email",
      "placeholder": "hello@example.com",
      "info": "Only shown if contact information is enabled"
    }
  ]
}
{% endschema %}
