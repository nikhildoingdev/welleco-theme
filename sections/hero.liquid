    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Pro level protection for every level"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SAVE OVER 30%"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button Background Color",
      "default": "#FFFFFF"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Endorsement Settings"
    },
    {
      "type": "checkbox",
      "id": "show_endorsement",
      "label": "Show Endorsement Block",
      "default": true
    },
    {
      "type": "text",
      "id": "endorsement_name",
      "label": "Endorser Name",
      "default": "TJ Oshie"
    },
    {
      "type": "image_picker",
      "id": "endorsement_signature_image",
      "label": "Endorser Signature Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
