    {
      "type": "radio",
      "id": "secondary_background_type",
      "label": "Background Type",
      "options": [
        { "value": "image", "label": "Image" },
        { "value": "video", "label": "Video" }
      ],
      "default": "image"
    },
    {
      "type": "image_picker",
      "id": "secondary_image_background",
      "label": "Image Background"
    },
    {
