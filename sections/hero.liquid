{% comment %}
  Hero Banner Section
  Displays a banner with either an image or video background, customizable text, and an optional endorsement block.
{% endcomment %}

{%- liquid
  assign section_id = 'hero-banner-' | append: section.id
  assign background_layout = section.settings.background_layout

  
  assign primary_background_type = section.settings.primary_background_type
  assign primary_image_background = section.settings.primary_image_background
  assign primary_video_background_url = section.settings.primary_video_background_url
  assign primary_video_background_hosted = section.settings.primary_video_background_hosted

  assign secondary_background_type = section.settings.secondary_background_type
  assign secondary_image_background = section.settings.secondary_image_background
  assign secondary_video_background_url = section.settings.secondary_video_background_url
  assign secondary_video_background_hosted = section.settings.secondary_video_background_hosted

  assign stars_text = section.settings.stars_text
  assign heading = section.settings.heading
  assign subheading = section.settings.subheading
  assign button_text = section.settings.button_text
  assign button_link = section.settings.button_link
  assign button_text_color = section.settings.button_text_color

  assign show_endorsement = section.settings.show_endorsement
  assign endorsement_name = section.settings.endorsement_name
  assign endorsement_signature_image = section.settings.endorsement_signature_image

  assign content_alignment = section.settings.content_alignment
  assign vertical_alignment = section.settings.vertical_alignment
  assign button_color = section.settings.button_color
-%}

{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<style>
  #{{ section_id }} {
    --hero-text-color: {{ section.settings.text_color }};
    --hero-overlay-color: {{ section.settings.overlay_color }};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --hero-content-alignment: {{ content_alignment }};
    --hero-vertical-alignment: {{ vertical_alignment }};
    --hero-button-color: {{ button_color }};
    --hero-button-text-color: {{ button_text_color }};
    /* Add more variables here if needed for other settings */
  }
</style>

<div id="{{ section_id }}" class="hero-banner hero-banner-section hero-banner-section--{{ background_layout }}">
  {% if background_layout == 'split' %}
    {% render 'component-hero-background',
     type: primary_background_type,
     image: primary_image_background,
     video_hosted: primary_video_background_hosted,
     video_url: primary_video_background_url,
     slot: 'primary'
    %}

    {% render 'component-hero-background',
     type: secondary_background_type,
     image: secondary_image_background,
     video_hosted: secondary_video_background_hosted,
     video_url: secondary_video_background_url,
     slot: 'secondary'
    %}

  {% else %}

    {% render 'component-hero-background',
     type: primary_background_type,
     image: primary_image_background,
     video_hosted: primary_video_background_hosted,
     video_url: primary_video_background_url,
     slot: 'primary'
    %}
    
  {% endif %}
  
  <div class="hero-banner__background-overlay"></div>


  <div class="hero-banner__content hero-banner__content--h-{{ content_alignment }} hero-banner__content--v-{{ vertical_alignment }}">
    {% if stars_text != blank %}
      <div class="hero-banner__stars"><span class="stars">★★★★★</span> {{ stars_text }}</div>
    {% endif %}

    {% if heading != blank %}
      <h2 class="hero-banner__heading">{{ heading | escape }}</h2>
    {% endif %}

    {% if subheading != blank %}
      <p class="hero-banner__subheading">{{ subheading | escape }}</p>
    {% endif %}

    {% if button_text != blank and button_link != blank %}
      <a href="{{ button_link }}" class="hero-banner__button">
        {{ button_text | escape }}
      </a>
    {% endif %}
  </div>

  {% if show_endorsement %}
    <div class="hero-banner__endorsement">
      {% if endorsement_name != blank %}
        <div class="hero-banner__endorsement-name">{{ endorsement_name | escape }}</div>
      {% endif %}
      {% if endorsement_signature_image != blank %}
        <div class="hero-banner__endorsement-signature">
          {{
            endorsement_signature_image
            | image_url: width: 200
            | image_tag: loading: 'lazy', widths: '50, 100, 150, 200'
          }}
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "header",
      "content": "Background Settings"
    },
    {
      "type": "select",
      "id": "background_layout",
      "label": "Background Layout",
      "options": [
        { "value": "single", "label": "Single" },
        { "value": "split", "label": "Split" }
      ],
      "default": "single"
    },
    {
      "type": "header",
      "content": "Primary Background Settings"
    },
    {
      "type": "radio",
      "id": "primary_background_type",
