/* Light */
@font-face {
  font-family: 'Futura Cyrillic';
  src: url('{{ "FuturaCyrillicLight.woff2" | asset_url }}') format('woff2'),
       url('{{ "FuturaCyrillicLight.woff" | asset_url }}') format('woff');
  font-weight: 300;
  font-style: normal;
  font-display: swap;
}

